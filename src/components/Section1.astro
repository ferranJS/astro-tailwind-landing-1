<script>
  const rightSideImgs = document.querySelectorAll("section div:nth-child(1) img")
  const leftSideImgs = document.querySelectorAll("section div:nth-child(2) img")
  const rightSideDivs = document.querySelectorAll("section div:nth-child(1) div")
  const leftSideDivs = document.querySelectorAll("section div:nth-child(2) div")
  rightSideDivs.forEach((_, i) => {
    function focusPerson() {
      rightSideImgs[i]!.classList.add("!scale-150")
      leftSideImgs[i]!.classList.add("!scale-150")
    }
    function unfocusPerson() {
      rightSideImgs[i]!.classList.remove("!scale-150")
      leftSideImgs[i]!.classList.remove("!scale-150")
    }
    leftSideDivs[i].addEventListener("mouseenter", focusPerson)
    rightSideDivs[i].addEventListener("mouseenter", focusPerson)
    leftSideDivs[i].addEventListener("mouseleave", unfocusPerson)
    rightSideDivs[i].addEventListener("mouseleave", unfocusPerson)
  })
</script>

